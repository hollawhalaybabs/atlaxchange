<odoo>
    <!-- Tree View -->
    <record id="view_transaction_fee_tree" model="ir.ui.view">
        <field name="name">transaction.fee.tree</field>
        <field name="model">transaction.fee</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="partner_id"/>
                <field name="currency_code"/>
                <field name="transfer_direction"/>
                <field name="fee"/>
                <field name="percentage"/>
                <field name="max_fee"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_transaction_fee_form" model="ir.ui.view">
        <field name="name">transaction.fee.form</field>
        <field name="model">transaction.fee</field>
        <field name="arch" type="xml">
            <form string="Transaction Fee" create="false" delete="false">
                <header>
                    <button name="fetch_transaction_fees"
                            string="Fetch Rate"
                            type="object"
                            class="btn-warning"/>
                    <button name="action_open_update_fee_wizard"
                            string="Update Fee"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="fee_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="currency_code" readonly="1"/>
                            <field name="transfer_direction" readonly="1"/>
                        </group>
                        <group>
                            <field name="type" readonly="1"/>
                            <field name="fee" readonly="1"/>
                            <field name="percentage" readonly="1"/>
                            <field name="max_fee" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_transaction_fee" model="ir.actions.act_window">
        <field name="name">Transaction Fees</field>
        <field name="res_model">transaction.fee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menuitem -->
    <menuitem id="menu_transaction_fee"
              name="Transaction Fees"
              parent="atlaxchange_app.menu_atlaxchange_config"
              action="action_transaction_fee"
              sequence="20"/>

    <!-- Debit Transaction Fees -->
    <record id="action_transaction_fee_debit" model="ir.actions.act_window">
        <field name="name">Debit Transaction Fees</field>
        <field name="res_model">transaction.fee</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('transfer_direction', '=', 'debit')]</field>
    </record>
    <menuitem id="menu_transaction_fee_debit"
              name="Debit Fees"
              parent="menu_transaction_fee"
              action="action_transaction_fee_debit"
              sequence="10"/>

    <!-- Credit Transaction Fees -->
    <record id="action_transaction_fee_credit" model="ir.actions.act_window">
        <field name="name">Credit Transaction Fees</field>
        <field name="res_model">transaction.fee</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('transfer_direction', '=', 'credit')]</field>
    </record>
    <menuitem id="menu_transaction_fee_credit"
              name="Credit Fees"
              parent="menu_transaction_fee"
              action="action_transaction_fee_credit"
              sequence="20"/>
</odoo>