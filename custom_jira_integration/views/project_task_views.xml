<odoo>
    <record id="view_task_form_inherit_jira" model="ir.ui.view">
        <field name="name">project.task.form.inherit.jira</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="jira_key" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>